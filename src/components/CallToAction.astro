---
interface Props {
  href: string;
  icon?: "left" | "right";
}

const { href, icon } = Astro.props;
---

<a
  href={href}
  class:list={{ "icon-left": icon === "left", "icon-right": icon !== "left" }}
  ><slot /></a
>

<style>
  a {
    position: relative;
    text-decoration: none;
    line-height: 1.1;
    overflow: hidden;
    font-family: var(--font-brand);
    white-space: nowrap;
    display: flex;
    place-content: center;
  }

  .icon-right {
    svg {
      margin-left: 0.5em;
    }
  }

  .icon-left {
    svg {
      margin-right: 0.5em;
    }
  }

  @media (min-width: 20em) {
    a {
      font-size: var(--text-lg);
      place-content: flex-start;
    }
  }

  @media (min-width: 50em) {
    a {
      padding-top: 1rem;
      font-size: var(--text-xl);
      text-align: left;
    }
  }
</style>
